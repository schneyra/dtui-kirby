{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "alpha-value-notation": "number",
    "selector-class-pattern": "(?:[a-z](?:-?[a-z0-9]+)*)(?:__(?:[a-z](?:-?[a-z0-9]+)*))?(?:--(?:[a-z](?:-?[a-z0-9]+)*))?",
    "custom-property-pattern": "(?:--[a-z](?:-?[a-z0-9]+)*)?(?:--(?:[a-z0-9]))?",
    "order/order": [
      "custom-properties",
      "declarations"
    ]
  }
}
